{
    "name" : "webservco/project-skeleton",
    "type" : "project",
    "description" : "A simple webservco/framework Project Skeleton.",
    "keywords" : [
        "framework",
        "webservco"
    ],
    "homepage" : "https://webserv.co/",
    "license" : "MIT",
    "authors" : [
        {
            "name" : "Radu Maier",
            "email" : "ariademur@webserv.co"
        }
    ],
    "require" : {
        "php" : "^7.4",
        "webservco/framework" : "v10.x-dev"
    },
    "require-dev" : {
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "slevomat/coding-standard": "^6.4"
    },
    "suggest" : {
        "pds/skeleton" : "A standard filesystem skeleton suitable for all PHP packages.",
        "squizlabs/php_codesniffer" : "Detects violations of a defined set of coding standards.",
        "phpstan/phpstan" : "PHP Static Analysis Tool, when using PHP 7.x"
    },
    "autoload" : {
        "psr-4" : {
            "Project\\" : "src/"
        }
    },
    "scripts" : {
        "all": "clear && composer s:8 && composer check",
        "check" : "phpcs --standard=php-coding-standard.xml --extensions=php -sp config public src",
        "check:devel": "grep -rnF 'XXX' config public resources src",
        "check:structure" : "pds-skeleton validate .",
        "s:8": "phpstan analyse src tests --level=8 --ansi -c phpstan.neon",
        "test" : "vendor/bin/phpunit --colors=always",
        "test:d" : "vendor/bin/phpunit --testdox"
    }
}
